<div class="author">
  <h1 class="author__heading">Hi, I'm Tamim</h1>
  <p class="author__body">Web Developer</p>
</div>

<img
  src="/img/hero-image.webp"
  alt="a person look"
  class="hero-img"
  width="981"
  height="528"
/>

<section class="articles">
    <h2 class="articles__heading">Latest Post</h2>

    <ul class="articles-ul">

      <% data.forEach(post => { %>
       
      

        <li>
            <a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
            </a>
        </li>

      <% }) %>
    </ul>

    <% if (nextPage !== null) { %>
      <a href="/?page= <%= nextPage %>" class="pagination">&lt; view older post</a>
    <% } %>
      
    

</section>